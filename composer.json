{
    "name": "zippovich2/wordpress",
    "description": "Wordpress app which use composer",
    "type": "project",
    "license": "MIT",
    "keywords": ["wordpress", "app", "composer", "modern", "development"],
    "authors": [
        {
            "name": "Roman Skoropadskyi",
            "email": "zipo.ckorop@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "public/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "public/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "public/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public/wp"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "roots/wordpress": "^5.0",
        "symfony/dotenv": "^5.0",
        "zippovich2/wordpress-config": "^1.0",
        "zippovich2/wordpress-loader": "^1.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "conflict": {
        "zippovich2/wordpress-config": "<1.1.1"
    },
    "scripts": {
        "post-create-project-cmd": "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    }
}
